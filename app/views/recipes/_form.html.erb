<%= form_for @recipe do |f| %>

  <%= render "shared/errors", obj: @recipe%>

  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :rating %> (1-5):
  <%= f.text_field :rating %><br />

  <%= f.label :cook_time %> (in minutes):
  <%= f.text_field :cook_time %><br />

  <%= f.label :description %>:
  <%= f.text_area :description %><br />

  <%= f.fields_for :recipe_ingredients do |ri| %>
    <%= ri.label :quantity %>
    <%= ri.text_field :quantity %>
    <%= ri.fields_for :ingredient do |i| %>
      <%= i.label :name %>
      <%= i.text_field :name %> <br>
    <% end %>
  <% end %>

  <%= f.hidden_field :user_id, :value => current_user.id %><br />

  <%= f.submit "Submit Recipe"%>
<% end %>
