<%= form_for @recipe do |f| %>

  <%= render "shared/errors", obj: @recipe%>

  <%= f.label :name %>:
  <%= f.text_field :name %><br />

  <%= f.label :rating %> (1-5):
  <%= f.text_field :rating %><br />

  <%= f.label :cook_time %> (in minutes):
  <%= f.text_field :cook_time %><br />

  <%= f.label :description %>:
  <%= f.text_area :description %><br />


  <%= f.fields_for :ingredients do |ff| %>
    <%=ff.label :name %>
    <%=ff.text_field :name %>
    <%= ff.fields_for :recipe_ingredients do |fff| %>
      <%= fff.label :quantity %>
      <%= fff.text_field :quantity %>
    <% end %>
  <% end %>

  <%= f.hidden_field :user_id, :value => current_user.id %><br />

  <%= f.submit %>
<% end %>
